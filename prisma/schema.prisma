generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid(7)) @db.Uuid
  email     String   @unique
  password  String
  isActive  Boolean  @map("is_active")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)

  @@map("users")
}
