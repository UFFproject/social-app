{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@uff/auth": ["libs/auth/src/index.ts"],
      "@uff/db": ["libs/db/src/index.ts"],
      "@uff/prisma": ["libs/prisma/src/index.ts"],
      "@uff/rpc/client": ["libs/rpc/src/client.ts"],
      "@uff/rpc/server": ["libs/rpc/src/server.ts"],
      "@uff/ui": ["libs/ui/src/index.ts"],
      "@uff/ui/*": ["libs/ui/src/*"],
      "@uff/validators": ["libs/validators/src/index.ts"]
    }
  },
  "exclude": ["node_modules"]
}
